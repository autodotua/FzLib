            <TabItem Header="截图和导出">
                <DockPanel LastChildFill="True">
                    <Grid Margin="4" DockPanel.Dock="Bottom">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <local:DemoWrapPanel>
                            <local:DemoTextBox ui:ControlHelper.Header="出血" Text="{Binding ExportPanelBlood}" />
                            <Slider
                                ui:ControlHelper.Header="缩放倍率"
                                AutoToolTipPlacement="TopLeft"
                                AutoToolTipPrecision="1" LargeChange="1"
                                Maximum="5" Minimum="0.1"
                                SmallChange="0.1"
                                Value="{Binding ExportPanelMagnification}" />
